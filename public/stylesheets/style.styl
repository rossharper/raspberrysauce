main-color = #7F2838
background-color = #faf9f0

body
  font-family 'Verdana'
  background-color background-color
  color #444

header
  padding 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 100%
  overflow hidden

.main-content
  float left
  width 100%

  p
    margin-bottom 20px

.greenButton {
  background-color:#44c767;
  border:1px solid #18ab29;
  display:inline-block;
  cursor:pointer;
  color:#ffffff;
  font-family:arial;
  font-size:17px;
  margin:10px;
  padding:16px 16px;
  text-align:center;
  text-decoration:none;
  text-shadow:0px 1px 0px #2f6627;
  width:100%;
}
.greenButton:active {
  background-color:#5cbf2a;
  position:relative;
  top:1px;
}

footer
  width 100%
  border-top 1px dotted #ccc
  padding-top 5px
  padding-left 10px
  font-size 13px
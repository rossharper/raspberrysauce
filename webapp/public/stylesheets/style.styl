#temperaturetile[title="19"]{background-color:#ff9b25}
#temperaturetile[title="16"]{background-color: #ffd465}
#temperaturetile[title="13"]{background-color: #fff357}
#temperaturetile[title="10"]{background-color:#c3ff5d}

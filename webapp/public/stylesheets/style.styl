  border  1px solid transparent
  -webkit-box-shadow  0 1px 1px rgba(0, 0, 0, .05)
  box-shadow  0 1px 1px rgba(0, 0, 0, .05)
  display inline-block

.tile-body
  padding  10px

.tile-body-large

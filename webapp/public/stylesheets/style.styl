body
  background-color #eee
  padding-top 70px

#temperaturetile
  color #fff

.tile 
  margin-bottom  20px
  background-color  #fff
  border  1px solid transparent
  -webkit-box-shadow  0 1px 1px rgba(0, 0, 0, .05)
  box-shadow  0 1px 1px rgba(0, 0, 0, .05)
  display inline-block

.tile-body 
  padding  15px

.tile-body-large
  font-size 5em
  font-weight 500

#temperaturetile[title="25"]{background-color: #ff5422}
